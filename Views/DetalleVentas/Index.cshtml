@model IEnumerable<Tienda.Models.DetalleVenta>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form class="form-inline" asp-controller="DetalleVentas" asp-action="Index">
    <div class="form-row">
        <div class="form-group col-auto">
            <label for="filter" class="sr-only">Buscar</label>
            <input type="text" class="form-control" name="filter" value="" placeholder="Buscar">
            <input type="submit" class="btn btn-secondary" value="Buscar">

        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.NombreProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venta.Factura)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DetalleVentaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DetalleVentaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DetalleVentaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
